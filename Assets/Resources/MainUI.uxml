<!-- MainUI.uxml -->
<!-- This is the primary UXML file for the in-game UI. -->
<!-- It defines the layout and structure for all the main HUD elements, -->
<!-- including the inventory, coin counter, timer, weather icons, -->
<!-- as well as the new crafting and game over menus. -->

<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:editor="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="Root" class="root">
        <ui:VisualElement name="HUD" class="hud-container">
            <!-- Header for the UI -->
            <ui:VisualElement name="TopHeader" class="header-container">
                <ui:VisualElement name="CoinSection" class="coin-section">
                    <!-- This image is a placeholder for your coin icon -->
                    <ui:VisualElement name="CoinIcon" class="icon" />
                    <ui:Label name="CoinAmount" text="999" class="coin-amount" />
                </ui:VisualElement>
                <ui:VisualElement name="TimerSection" class="timer-section">
                    <ui:Label name="Timer" text="00:00:00" class="timer-text" />
                </ui:VisualElement>
                <ui:VisualElement name="WeatherControl" class="weather-controls">
                    <ui:Label name="SunLabel" text="â˜€ï¸" class="weather-icon off-button" />
                    <ui:Label name="RainLabel" text="ðŸŒ§ï¸" class="weather-icon off-button" />
                    <ui:Label name="ThunderLabel" text="âš¡" class="weather-icon off-button" />
                </ui:VisualElement>
            </ui:VisualElement>

            <!-- Inventory bar at the bottom of the screen -->
            <ui:VisualElement name="InventoryBar" class="inventory-bar-container">
                <!-- Each of these VisualElements represents an inventory slot -->
                <ui:VisualElement name="InventoryEntry" class="inventory-slot">
                    <ui:VisualElement name="ItemIcone" class="item-icon" />
                    <ui:Label name="ItemCount" text="0" class="item-count" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-slot">
                    <ui:VisualElement name="ItemIcone" class="item-icon" />
                    <ui:Label name="ItemCount" text="0" class="item-count" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-slot">
                    <ui:VisualElement name="ItemIcone" class="item-icon" />
                    <ui:Label name="ItemCount" text="0" class="item-count" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-slot">
                    <ui:VisualElement name="ItemIcone" class="item-icon" />
                    <ui:Label name="ItemCount" text="0" class="item-count" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-slot">
                    <ui:VisualElement name="ItemIcone" class="item-icon" />
                    <ui:Label name="ItemCount" text="0" class="item-count" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-slot">
                    <ui:VisualElement name="ItemIcone" class="item-icon" />
                    <ui:Label name="ItemCount" text="0" class="item-count" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- The main blocker for fade-in/fade-out effects -->
        <ui:VisualElement name="Blocker" class="blocker" />

        <!-- Market and Warehouse popups -->
        <ui:VisualElement name="MarketPopup" class="modal-popup" style="display: none;">
            <ui:VisualElement name="PopupBackground" class="popup-background">
                <ui:Label text="Market" class="popup-title" />
                <ui:VisualElement name="MarketButtons" class="market-buttons">
                    <ui:Button name="BuyButton" text="Buy" class="button market-button" />
                    <ui:Button name="SellButton" text="Sell" class="button market-button" />
                </ui:VisualElement>
                <ui:ScrollView name="ContentScrollView" class="popup-content-scrollview" />
                <ui:Button name="CloseButton" text="X" class="close-button" />
            </ui:VisualElement>
        </ui:VisualElement>

        <ui:VisualElement name="WarehousePopup" class="modal-popup" style="display: none;">
            <ui:VisualElement name="PopupBackground" class="popup-background">
                <ui:Label text="Warehouse" class="popup-title" />
                <ui:ScrollView name="WarehouseScrollView" class="popup-content-scrollview" />
                <ui:Button name="CloseButton" text="X" class="close-button" />
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- New: Crafting/Pie-making popup -->
        <ui:VisualElement name="CraftingPopup" class="modal-popup" style="display: none;">
            <ui:VisualElement name="PopupBackground" class="popup-background">
                <ui:Label text="Crafting" class="popup-title" />
                <ui:ScrollView name="CraftingScrollView" class="popup-content-scrollview">
                    <ui:Label text="Recipes go here." />
                </ui:ScrollView>
                <ui:Button name="CloseButton" text="X" class="close-button" />
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- The main menu/settings screen. We'll use this to access the Game Over screen. -->
        <ui:VisualElement name="SettingMenu" class="modal-popup" style="display: none;">
            <ui:VisualElement name="PopupBackground" class="popup-background">
                <ui:Label text="Settings" class="popup-title" />
                <ui:Button name="ResumeButton" text="Resume" class="button popup-button" />
                <ui:Button name="ExitButton" text="Exit" class="button popup-button" />
                <ui:Button name="GameOverButton" text="Game Over" class="button popup-button" />
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- New: Game Over screen -->
        <ui:VisualElement name="GameOverScreen" class="game-over-screen" style="display: none;">
            <ui:VisualElement name="GameOverPanel" class="game-over-panel">
                <ui:Label text="Game Over" class="game-over-title" />
                <ui:Label text="Your Journey Has Ended" class="game-over-subtitle" />
                <ui:Button name="RestartButton" text="Restart Game" class="button game-over-button" />
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>