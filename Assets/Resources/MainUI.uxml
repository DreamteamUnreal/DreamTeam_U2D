<!-- Main UI Document for Game -->
<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:editor="UnityEditor.UIElements" editor:ext-text-alignment="UpperCenter" class="root-container">

    <!-- The main game overlay UI -->
    <ui:VisualElement name="MainGameUI" class="full-screen-ui">

        <!-- Top bar with timer, coins, and weather controls -->
        <ui:VisualElement class="top-bar-container">
            <ui:VisualElement class="coin-counter-container">
                <ui:VisualElement class="coin-icon" />
                <ui:Label name="CoinAmount" text="0" class="coin-amount-label" />
            </ui:VisualElement>

            <ui:VisualElement class="time-and-weather-container">
                <ui:Label name="Timer" text="00:00" class="timer-label" />
                
                <!-- Weather control container -->
                <ui:VisualElement class="weather-controls">
                    <ui:Label name="SunLabel" text="☀️" class="weather-icon off-button" />
                    <ui:Label name="RainLabel" text="🌧️" class="weather-icon off-button" />
                    <ui:Label name="ThunderLabel" text="🌩️" class="weather-icon off-button" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- Bottom bar with inventory slots -->
        <ui:VisualElement class="bottom-bar-container">
            <ui:VisualElement name="Inventory" class="inventory-container">
                <!-- Inventory slots will be queried by name/class "InventoryEntry" -->
                <!-- The script expects 8 of these. -->
                <ui:VisualElement name="InventoryEntry" class="inventory-entry equipped">
                    <ui:VisualElement class="item-icon-wrapper">
                        <ui:VisualElement name="ItemIcon" class="item-icon" />
                    </ui:VisualElement>
                    <ui:Label name="ItemCount" text="99" class="item-count-label" style="visibility: hidden;" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-entry">
                    <ui:VisualElement class="item-icon-wrapper">
                        <ui:VisualElement name="ItemIcon" class="item-icon" />
                    </ui:VisualElement>
                    <ui:Label name="ItemCount" text="99" class="item-count-label" style="visibility: hidden;" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-entry">
                    <ui:VisualElement class="item-icon-wrapper">
                        <ui:VisualElement name="ItemIcon" class="item-icon" />
                    </ui:VisualElement>
                    <ui:Label name="ItemCount" text="99" class="item-count-label" style="visibility: hidden;" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-entry">
                    <ui:VisualElement class="item-icon-wrapper">
                        <ui:VisualElement name="ItemIcon" class="item-icon" />
                    </ui:VisualElement>
                    <ui:Label name="ItemCount" text="99" class="item-count-label" style="visibility: hidden;" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-entry">
                    <ui:VisualElement class="item-icon-wrapper">
                        <ui:VisualElement name="ItemIcon" class="item-icon" />
                    </ui:VisualElement>
                    <ui:Label name="ItemCount" text="99" class="item-count-label" style="visibility: hidden;" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-entry">
                    <ui:VisualElement class="item-icon-wrapper">
                        <ui:VisualElement name="ItemIcon" class="item-icon" />
                    </ui:VisualElement>
                    <ui:Label name="ItemCount" text="99" class="item-count-label" style="visibility: hidden;" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-entry">
                    <ui:VisualElement class="item-icon-wrapper">
                        <ui:VisualElement name="ItemIcon" class="item-icon" />
                    </ui:VisualElement>
                    <ui:Label name="ItemCount" text="99" class="item-count-label" style="visibility: hidden;" />
                </ui:VisualElement>
                <ui:VisualElement name="InventoryEntry" class="inventory-entry">
                    <ui:VisualElement class="item-icon-wrapper">
                        <ui:VisualElement name="ItemIcon" class="item-icon" />
                    </ui:VisualElement>
                    <ui:Label name="ItemCount" text="99" class="item-count-label" style="visibility: hidden;" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>

    </ui:VisualElement>

    <!-- Market Popup UI (Initially hidden) -->
    <ui:VisualElement name="MarketPopup" class="popup-container">
        <ui:VisualElement class="popup-panel">
            <ui:VisualElement class="popup-header">
                <ui:Label text="Market" class="popup-title" />
                <ui:Button name="CloseButton" text="X" class="close-button" />
            </ui:VisualElement>

            <ui:VisualElement class="market-buttons-container">
                <ui:Button name="BuyButton" text="Buy" class="market-button activeButton" />
                <ui:Button name="SellButton" text="Sell" class="market-button" />
            </ui:VisualElement>

            <ui:ScrollView name="ContentScrollView" class="market-scrollview" />
        </ui:VisualElement>
    </ui:VisualElement>

    <!-- Warehouse Popup UI (Initially hidden) -->
    <ui:VisualElement name="WarehousePopup" class="popup-container">
        <!-- This popup would have a similar structure to the market, but with different content -->
        <ui:VisualElement class="popup-panel">
            <ui:VisualElement class="popup-header">
                <ui:Label text="Warehouse" class="popup-title" />
                <ui:Button name="WarehouseCloseButton" text="X" class="close-button" />
            </ui:VisualElement>
            <ui:Label text="Warehouse content goes here..." class="filler-content" />
        </ui:VisualElement>
    </ui:VisualElement>

    <!-- Fade to black blocker (initially transparent, or opaque for initial fade in) -->
    <ui:VisualElement name="Blocker" class="blocker" />
</ui:UXML>